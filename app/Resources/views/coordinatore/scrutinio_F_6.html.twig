{% extends 'coordinatore/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  {% include 'ruolo_docente/menu_coordinatore.html.twig' %}
  {% if not classe %}
  <div class="alert alert-warning gs-mt-4" role="alert">
    <strong class="gs-big">{{ 'message.classe_mancante'|trans }}</strong>
  </div>
  {% else %}
  <h1 class="text-center gs-h1 gs-mt-2 gs-mb-0">{{ 'title.coordinatore_scrutinio'|trans }} {{ classe.anno }}ª {{ classe.sezione }}</h1>
  <h2 class="text-center gs-h2 gs-mt-0 gs-mb-3">Passo 6: comunicazioni dei debiti e delle carenze</h2>
    {% for messaggio in app.flashes('errore') %}
      {% if loop.first %}
  <div class="alert alert-danger gs-mb-3" role="alert">
      {% endif %}
    <strong>{{ messaggio|raw }}</strong><br>
      {% if loop.last %}
  </div>
      {% endif %}
    {% endfor %}
  {{ form_start(form) }}
    {% if classe.anno == 5 %}
  <div class="alert alert-success gs-mb-3" role="alert">
    <strong class="gs-big">Per le classi quinte non è previsto questo passaggio.<br>Vai al passo successivo.</strong>
  </div>
    {% else %}
      {% if dati.debiti|length > 0 %}
  <table class="table table-bordered table-hover table-striped">
    <caption class="text-info text-center gs-big gs-pb-0"><strong>Debiti formativi (verifica finale obbligatoria)</strong></caption>
    <thead class="bg-success">
      <tr>
        <th class="col-sm-4 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><small>Alunno</small></th>
        <th class="col-sm-4 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
          <small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="Materie con debito formativo">Materie</span></small>
        </th>
        <th class="col-sm-4 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
          <small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="Comunicazione dei debiti formativi">Comunicazione</span></small>
        </th>
      </tr>
    </thead>
    <tbody>
        {% for alunno,a in dati.debiti %}
      <tr>
          {% for materia,m in a %}
            {% if loop.first %}
        <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
          <strong>{{ m.cognome }} {{ m.nome }}</strong><br><small>({{ m.dataNascita|date('d/m/Y') }})</small>
              {% if m.bes != 'N' %}
          <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Informazioni sull'alunno" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ ('label.bes_'~m.bes)|trans }}"><span class="glyphicon glyphicon-info-sign"></span></button>
              {% endif %}
              {% if m.note is not empty %}
          <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Note aggiuntive" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ m.note }}"><span class="glyphicon glyphicon-info-sign"></span></button>
              {% endif %}
        </td>
        <td>
            {% endif %}
          <strong>{{ m.materia }}{{ not loop.last ? ', ' }}</strong>
            {% if loop.last %}
        </td>
        <td>
              {% if dati.esiti[alunno].dati.debiti is defined and dati.esiti[alunno].dati.debiti %}
          <span class="label label-success gs-mr-3">COMPILATA</span>
          <button type="button" class="btn btn-xs btn-primary gs-button-remote" title="Modifica la comunicazione dei debiti formativi" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('coordinatore_scrutinio_debiti', {'alunno': alunno, 'periodo': 'F'}) }}"><span class="glyphicon glyphicon-edit"></span></button>
              {% else %}
          <button type="button" class="btn btn-xs btn-primary gs-button-remote" title="Compila la comunicazione dei debiti formativi" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('coordinatore_scrutinio_debiti', {'alunno': alunno, 'periodo': 'F'}) }}"><span class="glyphicon glyphicon-edit"></span></button>
              {% endif %}
        </td>
            {% endif %}
          {% endfor %}
      </tr>
        {% endfor %}
    </tbody>
  </table>
      {% else %}
  <div class="alert alert-success gs-mb-3" role="alert">
    <strong>Non sono presenti debiti formativi.</strong>
  </div>
      {% endif %}
      {% if dati.carenze|length > 0 %}
  <table class="table table-bordered table-hover table-striped">
    <caption class="text-info text-center gs-big gs-pb-0"><strong>Carenze (recupero autonomo senza verifica finale)</strong></caption>
    <thead class="bg-success">
      <tr>
        <th class="col-sm-4 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><small>Alunno</small></th>
        <th class="col-sm-4 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
          <small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="Materie con carenze">Materie</span></small>
        </th>
        <th class="col-sm-4 gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
          <small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="Comunicazione delle carenze">Comunicazione</span></small>
        </th>
      </tr>
    </thead>
    <tbody>
        {% for alunno,a in dati.carenze %}
      <tr>
          {% for materia,m in a %}
            {% if loop.first %}
        <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
          <strong>{{ m.cognome }} {{ m.nome }}</strong><br><small>({{ m.dataNascita|date('d/m/Y') }})</small>
              {% if m.bes != 'N' %}
          <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Informazioni sull'alunno" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ ('label.bes_'~m.bes)|trans }}"><span class="glyphicon glyphicon-info-sign"></span></button>
              {% endif %}
              {% if m.note is not empty %}
          <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Note aggiuntive" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ m.note }}"><span class="glyphicon glyphicon-info-sign"></span></button>
              {% endif %}
        </td>
        <td>
            {% endif %}
          <strong>{{ m.materia }}{{ not loop.last ? ', ' }}</strong>
            {% if loop.last %}
        </td>
        <td>
              {% if dati.esiti[alunno].dati.carenze is defined and dati.esiti[alunno].dati.carenze %}
                {% for cm in dati.esiti[alunno].dati.carenze_materie %}
          <span class="label label-success gs-mr-3">{{ cm }}</span>
                {% else %}
          <span class="label label-info gs-mr-3">NESSUNA</span>
                {% endfor %}
          <button type="button" class="btn btn-xs btn-primary gs-button-remote" title="Modifica la comunicazione delle carenze" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('coordinatore_scrutinio_carenze', {'alunno': alunno, 'periodo': 'F'}) }}"><span class="glyphicon glyphicon-edit"></span></button>
              {% else %}
          <button type="button" class="btn btn-xs btn-primary gs-button-remote" title="Compila la comunicazione delle carenze" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('coordinatore_scrutinio_carenze', {'alunno': alunno, 'periodo': 'F'}) }}"><span class="glyphicon glyphicon-edit"></span></button>
              {% endif %}
        </td>
            {% endif %}
          {% endfor %}
      </tr>
        {% endfor %}
    </tbody>
  </table>
      {% else %}
  <div class="alert alert-success gs-mb-3" role="alert">
    <strong>Non sono presenti carenze.</strong>
  </div>
      {% endif %}
    {% endif %}
  <div class="row gs-mt-5 gs-mb-5">
    <div class="col-sm-6">
      <a class="btn btn-primary gs-wait-page" href="{{ path('coordinatore_scrutinio', {'classe': classe.id, 'stato': '5'}) }}" role="button" title="Annulla e torna al passo precedente"><span class="glyphicon glyphicon-backward gs-mr-2"></span><strong>Torna al passo precedente</strong></a>
    </div>
    <div class="text-right col-sm-6">
      <button type="button" class="btn btn-primary" title="Vai al passo successivo" data-toggle="modal" data-target="#gs-modal-waiting"><span class="glyphicon glyphicon-forward gs-mr-2"></span><strong>Conferma e vai avanti</strong></button>
    </div>
  </div>
    {{ form_end(form) }}
    {% include 'include/modal-remote.html.twig' %}
    {% include 'include/modal-waiting.html.twig' %}
  {% endif %}
</div>
{% endblock %}

{% block pagina_js_fine %}
{{ parent() }}
<script>
$(document).ready(function() {
  $('#gs-modal-waiting').on('shown.bs.modal', function (event) {
    $('form[name="scrutinio"]').submit();
  });
  $('a.gs-wait-page').click(function (event) {
    $('#gs-modal-waiting').modal('show');
    return true;
  });
  $('[data-toggle="popover"]').popover();
  $('#gs-modal-remote').on('show.bs.modal', function (event) {
    var url = $(event.relatedTarget).data('href');
    $(this).find('#gs-modal-remote-content').load(url);
  });
  $(".gs-button-remote").click(function(e) {
    e.preventDefault();
    $('#gs-modal-remote-content').html('<div class="modal-content"><div class="modal-header"><h3 class="modal-title">Attendere prego...</h3></div><div class="modal-body"><div class="progress"><div class="progress-bar progress-bar-info progress-bar-striped active" style="width: 100%"></div></div></div></div>');
  });
});
</script>
{% endblock %}
