{% extends 'coordinatore/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  {% include 'ruolo_docente/menu_coordinatore.html.twig' %}
  {% if not classe %}
  <div class="alert alert-warning gs-mt-4" role="alert">
    <strong class="gs-big">{{ 'message.classe_mancante'|trans }}</strong>
  </div>
  {% else %}
  <h1 class="text-center gs-h1 gs-mt-2 gs-mb-3">{{ 'title.coordinatore_voti'|trans }} {{ classe.anno }}Âª {{ classe.sezione }}</h1>
  <div class="row gs-mb-1">
    <div class="col-sm-12 text-right">
      <a class="btn btn-success btn-sm" href="{{ path('coordinatore_voti_stampa', {'classe': classe.id}) }}" role="button" title="Scarica il documento in formato PDF"><span class="glyphicon glyphicon-print gs-mr-3"></span><strong>{{ 'label.stampa'|trans }}</strong></a>
    </div>
  </div>
  <table class="table table-bordered table-hover table-striped">
    <caption class="text-info text-center gs-big"><strong>{{ dati.periodo }}</strong></caption>
    <thead class="bg-success">
      <tr>
        <th class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><small>Alunno</small></th>
    {% for materia,m in dati.materie %}
        <th class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
          <small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ m.nome }}">{{ m.nomeBreve }}</span></small>
        </th>
    {% endfor %}
        <th class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2"><small><span data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="Media complessiva">Media</span></small></th>
      </tr>
    </thead>
    <tbody>
    {% for alunno,a in dati.alunni %}
      <tr>
        <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
          <strong>{{ a.nome }}</strong><br><small>({{ a.nascita }})</small>
        {% if a.bes != 'N' %}
          <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Informazioni sull'alunno" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ ('label.bes_'~a.bes)|trans }}"><span class="glyphicon glyphicon-info-sign"></span></button>
        {% endif %}
        {% if a.note is not empty %}
          <button type="button" class="btn btn-xs btn-default gs-ml-1" title="Note aggiuntive" data-placement="auto left" data-toggle="popover" data-trigger="hover" data-content="{{ a.note }}"><span class="glyphicon glyphicon-info-sign"></span></button>
        {% endif %}
        </td>
      {% for materia,m in dati.materie %}
        <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
        {% if dati.medie[alunno][materia] is defined %}
          <span class="label label-{{ dati.medie[alunno][materia] < 5 ? 'danger' : (dati.medie[alunno][materia] < 6 ? 'warning' : 'success')}}">{{ dati.medie[alunno][materia] }}</span>
        {% else %}
          <span>--</span>
        {% endif %}
        </td>
      {% endfor %}
        <td class="gs-pt-1 gs-pb-1 gs-pl-2 gs-pr-2">
      {% if dati.medie[alunno][0] is defined %}
          <span class="gs-big"><span class="label label-{{ dati.medie[alunno][0] < 5 ? 'danger' : (dati.medie[alunno][0] < 6 ? 'warning' : 'success')}}">{{ dati.medie[alunno][0] }}</span></span>
      {% else %}
          <span>--</span>
      {% endif %}
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
  {% endif %}
</div>
{% endblock %}

{% block pagina_js_fine %}
{{ parent() }}
<script>
$(document).ready(function() {
  $('[data-toggle="popover"]').popover();
});
</script>
{% endblock %}
