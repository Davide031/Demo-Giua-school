{% extends 'ruolo_segreteria/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  <h1 class="text-center gs-h2 gs-mt-0">{{ 'title.segreteria_scrutini'|trans }}</h1>
  {% include('include/form-inline.html.twig') %}
  <table class="table table-bordered table-hover table-striped gs-mb-0">
    <thead class="bg-success">
      <tr>
        <th class="col-sm-5">{{ 'label.alunno'|trans }}</th>
        <th class="col-sm-2">{{ 'label.classe'|trans }}</th>
        <th class="col-sm-5">{{ 'label.action'|trans }}</th>
      </tr>
    </thead>
    <tbody>
    {% for u in dati.lista %}
      <tr>
        <td>{{ u.cognome }} {{ u.nome }} ({{ u.dataNascita|date('d/m/Y') }})</td>
        <td>{{ u.classe ? u.classe.anno~'Âª '~u.classe.sezione : 'Ritirato/Trasferito/Estero' }}</td>
        <td>
      {% if u.classe %}
        {% for periodo in dati.pagelle[u.id] %}
          {% if periodo == 'F' %}
          <a class="btn btn-primary btn-xs gs-mr-2" href="{{ path('segreteria_scrutini_mostra', {'alunno': u.id, 'periodo': periodo}) }}" role="button" title="Clicca per visualizzare i documenti dello scrutinio"><span class="glyphicon glyphicon-list-alt gs-mr-3" aria-hidden="true"></span><strong>Scrutinio finale</strong></a>
          {% elseif periodo == 'R' %}
          <a class="btn btn-primary btn-xs gs-mr-2 gs-mt-1" href="{{ path('segreteria_scrutini_mostra', {'alunno': u.id, 'periodo': periodo}) }}" role="button" title="Clicca per visualizzare i documenti dello scrutinio"><span class="glyphicon glyphicon-list-alt gs-mr-3" aria-hidden="true"></span><strong>Ripresa scrutinio sospeso</strong></a>
          {% endif %}
        {% endfor %}
      {% endif %}
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
  {% if maxPages > 1 %}
  <nav aria-label="Navigazione tra le pagine" class="text-center">
    <ul class="pagination pagination-sm gs-mt-2">
    {% if page > 1 %}
      <li><a href="{{ path('segreteria_scrutini', {'pagina': page-1}) }}" title="{{ 'label.precedente'|trans }}"><span aria-hidden="true">&laquo;</span></a></li>
    {% else %}
      <li class="disabled"><span title="{{ 'label.precedente'|trans }}"><span aria-hidden="true">&laquo;</span></span></li>
    {% endif %}
    {% for i in 1..maxPages %}
      <li {{ page == i ? 'class="active"' }}><a href="{{ path('segreteria_scrutini', {'pagina': i}) }}">{{ i }}</a></li>
    {% endfor %}
    {% if page < maxPages %}
      <li><a href="{{ path('segreteria_scrutini', {'pagina': page+1}) }}" title="{{ 'label.successiva'|trans }}"><span aria-hidden="true">&raquo;</span></a></li>
    {% else %}
      <li class="disabled"><span title="{{ 'label.successiva'|trans }}"><span aria-hidden="true">&raquo;</span></span></li>
    {% endif %}
    </ul>
  </nav>
  {% endif %}
</div>
{% endblock %}
