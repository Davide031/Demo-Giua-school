{% extends 'lezioni/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  {% include 'ruolo_docente/menu_lezioni.html.twig' %}
  <h1 class="text-center gs-h1 gs-mt-2">{{ 'title.lezioni_classe'|trans }}</h1>
  <h2 class="text-primary gs-h2 gs-mb-1">Le mie classi:</h2>
  <div class="container-fluid">
    <table class="table table-bordered table-hover table-striped">
      <thead class="bg-success">
        <tr>
          <th>{{ 'label.sede'|trans }}</th>
          <th>{{ 'label.classe'|trans }}</th>
          <th>{{ 'label.materia'|trans }}</th>
        </tr>
      </thead>
      <tbody>
        {% for k,v in cattedre %}
        <tr>
          <td>
            <strong class="gs-big">{{ v[0].classe.sede.citta }}</strong>
          </td>
          <td>
            <strong class="gs-big">{{ v[0].classe.anno }}ª {{ v[0].classe.sezione }}</strong><br>
            <em>{{ v[0].classe.corso.nomeBreve }}</em>
          </td>
          <td>
            {% for k1,v1 in v %}
            <a class="btn btn-primary gs-mr-3" href="{{ path('lezioni_registro_firme', {'cattedra': v1.id, 'classe': 0}) }}" role="button" title="{{ v1.classe.anno }}{{ v1.classe.sezione }} - {{ v1.materia.nome }}">{{ v1.materia.nomeBreve }}{{ v1.materia.tipo == 'S' ? ' ('~v1.alunno.cognome~' '~v1.alunno.nome~')' }}</a>
            {% endfor %}
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
  <h2 class="text-primary gs-h2 gs-mb-1">Tutte le classi:</h2>
  <div class="container-fluid">
    <table class="table table-bordered table-hover table-striped">
      <thead class="bg-success">
        <tr>
          <th>{{ 'label.sede'|trans }}</th>
          <th>{{ 'label.sezione'|trans }}</th>
          <th>{{ 'label.classe'|trans }}</th>
        </tr>
      </thead>
      <tbody>
        {% for k,v in classi %}
        <tr>
          <td>
            <strong class="gs-big">{{ v[0].sede.citta }}</strong>
          </td>
          <td>
            <strong class="gs-big">{{ v[0].sezione }}</strong><br>
          </td>
          <td>
            {% for k1,v1 in v %}
            <a class="btn btn-primary gs-mr-3" href="{{ path('lezioni_registro_firme', {'cattedra': 0, 'classe': v1.id}) }}" role="button" title="{{ v1.anno }}{{ v1.sezione }} - {{ v1.corso.nome }}">{{ v1.anno }}ª {{ v1.sezione }}</a>
            {% endfor %}
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}

