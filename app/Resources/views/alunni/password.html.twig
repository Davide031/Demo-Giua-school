{% extends 'alunni/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid gs-mt-2">
  {% include('include/form-inline.html.twig') %}
  <table class="table table-striped table-bordered gs-mb-0">
    <thead>
      <tr>
        <th>{{ 'label.cognome'|trans }}</th>
        <th>{{ 'label.nome'|trans }}</th>
        <th>{{ 'label.data_nascita'|trans }}</th>
        <th>{{ 'label.classe'|trans }}</th>
        <th>{{ 'label.action'|trans }}</th>
      </tr>
    </thead>
    <tbody>
    {% for u in lista %}
      <tr>
        <td>{{ u.cognome }}</td>
        <td>{{ u.nome }}</td>
        <td>{{ u.dataNascita|date('d/m/Y') }}</td>
        <td>{% if u.classe %}{{ u.classe.anno }} {{ u.classe.sezione }}{% endif%}</td>
        <td>
          <a class="btn btn-primary btn-xs" href="{{ path('alunni_password_create', {'idalunno': u.id, 'idclasse': 0}) }}" role="button"><span class="glyphicon glyphicon-lock gs-mr-2" aria-hidden="true"></span>{{ 'label.nuova_password'|trans }}</a>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
  {% if maxPages > 1 %}
  <nav aria-label="Navigazione tra le pagine" class="text-center">
    <ul class="pagination pagination-sm gs-mt-2">
      {% if page > 1 %}
      <li>
        <a href="{{ path('alunni_password-param', {page: page-1}) }}" title="{{ 'label.precedente'|trans }}"><span aria-hidden="true">&laquo;</span></a>
      </li>
      {% else %}
      <li class="disabled">
        <span title="{{ 'label.precedente'|trans }}"><span aria-hidden="true">&laquo;</span></span>
      </li>
      {% endif %}
      {% for i in 1..maxPages %}
      <li {{ page == i ? 'class="active"' }}>
        <a href="{{ path('alunni_password-param', {page: i}) }}">{{ i }}</a>
      </li>
      {% endfor %}
      {% if page < maxPages %}
      <li>
        <a href="{{ path('alunni_password-param', {page: page+1}) }}" title="{{ 'label.successiva'|trans }}"><span aria-hidden="true">&raquo;</span></a>
      </li>
      {% else %}
      <li class="disabled">
        <span title="{{ 'label.successiva'|trans }}"><span aria-hidden="true">&raquo;</span></span>
      </li>
      {% endif %}
    </ul>
  </nav>
  {% endif %}
  {% if form.classe.vars.value > 0 %}
  <p>
    <button id="gs-modal-confirm-button" class="btn btn-primary gs-mt-3" data-toggle="modal" data-target="#gs-modal-confirm" data-href="{{ path('alunni_password_create', {'idalunno': 0, 'idclasse': form.classe.vars.value}) }}"><span class="glyphicon glyphicon-lock gs-mr-2" aria-hidden="true"></span>{{ 'label.nuova_password_classe'|trans }}</button>
  </p>
  {% include 'include/modal-confirm.html.twig' %}
  {% endif %}
</div>
{% endblock %}


{% block pagina_js_fine %}
{{ parent() }}
<script>
$(document).ready(function() {
  $('#gs-modal-confirm').on('show.bs.modal', function (event) {
    var href = $(event.relatedTarget).data('href');
    $(this).find('#gs-modal-confirm-yes').attr('href', href);
  });
});
</script>
{% endblock %}
