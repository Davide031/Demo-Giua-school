{% extends 'ruolo_staff/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  <h1 class="text-center gs-h2 gs-mt-0">{{ 'title.annotazioni'|trans }}</h1>
  {% if errore %}
  <div class="row gs-mb-5">
    <div class="col-sm-12">
      <strong class="gs-big">Data:</strong>
      <button class="btn btn-primary" id="gs-button-date" title="Cambia data"><span class="glyphicon glyphicon-calendar gs-mr-3"></span>{{ info.data_label }}</button>
    </div>
  </div>
  <div class="alert alert-warning" role="alert">
    <strong class="gs-big">{{ errore }}</strong>
  </div>
  {% else %}
    {% include('include/form-inline.html.twig') %}
  <div class="row gs-mb-1">
    <div class="col-sm-6">
      <strong class="gs-big">Data:</strong>
      <button class="btn btn-primary" id="gs-button-date" title="Cambia data"><span class="glyphicon glyphicon-calendar gs-mr-3"></span>{{ info.data_label }}</button>
    </div>
    <div class="col-sm-6 text-right">
    {% if dati.azioni.add is defined  %}
      <a class="btn btn-primary" href="{{ path('staff_annotazione_add', {'data': data}) }}" role="button" title="Aggiungi una nuova annotazione"><span class="glyphicon glyphicon-plus gs-mr-2"></span>Aggiungi</a>
    {% endif %}
    </div>
  </div>
  <table class="table table-bordered table-hover table-striped gs-mb-0">
    <thead class="bg-success">
      <tr>
        <th>{{ 'label.classe'|trans }}</th>
        <th>{{ 'label.annotazione'|trans }}</th>
        <th>{{ 'label.action'|trans }}</th>
      </tr>
    </thead>
    <tbody>
      {% for k,a in dati.lista %}
      <tr>
        <td>{{ a.classe }}</td>
        <td>
        {% if not a.visibile %}
          <span class="glyphicon glyphicon-eye-close text-danger gs-mr-2" title="Non visibile ai genitori"></span>
        {% endif %}
          {{ a.testo }}
          <em>({{ a.docente.nome }} {{ a.docente.cognome }})</em>
        </td>
        <td>
        {% if dati.azioni[k].edit is defined %}
          <a class="btn btn-primary btn-xs" href="{{ path('lezioni_registro_annotazione_edit', {'classe': a.classe.id, 'data': data, 'id': a.id}) }}" role="button" title="Modifica l'annotazione sul registro"><span class="glyphicon glyphicon-edit"></span></a>
        {% endif %}
        {% if dati.azioni[k].delete is defined %}
          <button class="btn btn-danger btn-xs gs-modal-confirm-button" title="Cancella l'annotazione sul registro" data-toggle="modal" data-target="#gs-modal-confirm" data-href="{{ path('lezioni_registro_annotazione_delete', {'id': a.id}) }}" data-text="{{ 'message.cancella_annotazione'|trans }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
        {% endif %}
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
    {% include 'include/modal-confirm.html.twig' with {'modal_confirm_msg': 'message.cancella_annotazione'} %}
    {% if maxPages > 1 %}
  <nav aria-label="Navigazione tra le pagine" class="text-center">
    <ul class="pagination pagination-sm gs-mt-2">
      {% if page > 1 %}
      <li><a href="{{ path('staff_annotazioni', {'data': data, 'pagina': page-1}) }}" title="{{ 'label.precedente'|trans }}"><span aria-hidden="true">&laquo;</span></a></li>
      {% else %}
      <li class="disabled"><span title="{{ 'label.precedente'|trans }}"><span aria-hidden="true">&laquo;</span></span></li>
      {% endif %}
      {% for i in 1..maxPages %}
      <li {{ page == i ? 'class="active"' }}><a href="{{ path('staff_annotazioni', {'data': data, 'pagina': i}) }}">{{ i }}</a></li>
      {% endfor %}
      {% if page < maxPages %}
      <li><a href="{{ path('staff_annotazioni', {'data': data, 'pagina': page+1}) }}" title="{{ 'label.successiva'|trans }}"><span aria-hidden="true">&raquo;</span></a></li>
      {% else %}
      <li class="disabled"><span title="{{ 'label.successiva'|trans }}"><span aria-hidden="true">&raquo;</span></span></li>
      {% endif %}
    </ul>
  </nav>
    {% endif %}
  {% endif %}
</div>
{% endblock %}

{% block pagina_css %}
{{ parent() }}
<link href="{{ asset('vendor/bootstrap-datepicker/css/bootstrap-datepicker3.min.css') }}" rel="stylesheet">
{% endblock %}

{% block pagina_js_fine %}
{{ parent() }}
<script src="{{ asset('vendor/bootstrap-datepicker/js/bootstrap-datepicker.min.js') }}"></script>
<script src="{{ asset('vendor/bootstrap-datepicker/locales/bootstrap-datepicker.it.min.js') }}"></script>
<script>
$(document).ready(function() {
  $('#gs-button-date').datepicker({
    format: "yyyy-mm-dd",
    weekStart: 1,
    maxViewMode: 1,
    daysOfWeekDisabled: "0",
    defaultViewDate: "{{ data }}",
    startDate: "{{ app.session.get('/CONFIG/SCUOLA/anno_inizio') }}",
    endDate: "{{ app.session.get('/CONFIG/SCUOLA/anno_fine') }}",
    datesDisabled: {{ lista_festivi|raw }},
    todayBtn: "linked",
    todayHighlight: true,
    autoclose: true,
    language: "it",
    zIndexOffset: 1200
    });
  $('#gs-button-date').datepicker()
    .on('show', function(ev){
      $('#gs-button-date').datepicker('update', '{{ data }}');
  });
  $('#gs-button-date').datepicker()
    .on('changeDate', function(ev){
      $('#gs-button-date').datepicker('hide');
      url = "{{ path('staff_annotazioni', {'data': '9999-99-99', 'pagina': page}) }}";
      url = url.replace("9999-99-99", ev.format());
      window.location.href = url;
  });
  $('#gs-modal-confirm').on('show.bs.modal', function (event) {
    var href = $(event.relatedTarget).data('href');
    $(this).find('#gs-modal-confirm-yes').attr('href', href);
    var text = $(event.relatedTarget).data('text');
    $(this).find('#gs-modal-confirm-msg').text(text);
  });
});
</script>
{% endblock %}
