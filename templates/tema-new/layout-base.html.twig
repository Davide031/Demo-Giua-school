                            </li>
                            <li role="none">
                              <a class="list-item" href="#" role="menuitem" title="Vai alla pagina delle segnalazioni"><span>Segnalazioni</span></a>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="header-slim-right-zone">
                  <a class="btn btn-primary btn-icon rounded-0" href="{{ path('utenti_profilo') }}" title="{{ 'title.modifica_profilo'|trans }}">
                    <span class="rounded-icon">
                      <svg class="icon icon-primary">
                        <use xlink:href="{{ asset('vendor/bootstrap-italia/svg/sprite.svg') }}#it-user"></use>
                      </svg>
                    </span>
                    <span class="d-none d-lg-block">{{ app.user.nome }} {{ app.user.cognome }} ({{ ('label.'~app.user.roles[0])|trans }})</span>
                  </a>
  {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
                  <a class="btn btn-secondary btn-icon rounded-0" href="{{ path('procedure_alias_exit') }}" title="{{ 'title.alias_exit'|trans }}">
                    <span class="rounded-icon">
                      <svg class="icon icon-primary">
                        <use xlink:href="{{ asset('vendor/bootstrap-italia/svg/sprite.svg') }}#it-arrow-left"></use>
                      </svg>
                    </span>
                    <span class="d-none d-lg-block">{{ 'label.alias'|trans|upper }}</span>
                  </a>
  {% else %}
                  <a class="btn btn-secondary btn-icon rounded-0" href="{{ path('logout') }}" title="{{ 'title.logout'|trans }}">
                    <span class="rounded-icon">
                      <svg class="icon icon-primary">
                        <use xlink:href="{{ asset('vendor/bootstrap-italia/svg/sprite.svg') }}#it-close-big"></use>
                      </svg>
                    </span>
                    <span class="d-none d-lg-block">{{ 'label.logout'|trans|upper }}</span>
                  </a>
  {% endif %}
                </div>
{% else %} {# mostrato quando non ci sono utenti connessi #}
                <div class="header-slim-right-zone">
                  <div class="text-white pr-4"><strong>Registro elettronico</strong></div>
