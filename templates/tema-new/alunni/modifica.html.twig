{% extends 'tema-new/layout-base.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  <h1 class="text-center mb-4">{{ titolo|trans }}</h1>
  {{ include('tema-new/include/filtro.html.twig', {form: form[0]}) }}
  <div class="table-responsive">
    <table class="table table-bordered table-hover table-striped table-sm gs-sticky-header" style="margin-top:-2.5rem">
      <thead class="thead-light">
        <tr class="sticky-top">
          <th class="col-auto" scope="col">{{ 'label.stato'|trans }}</th>
          <th class="col-auto" scope="col">{{ 'label.cognome'|trans }}</th>
          <th class="col-auto" scope="col">{{ 'label.nome'|trans }}</th>
          <th class="col-auto" scope="col">{{ 'label.data_nascita'|trans }}</th>
          <th class="col-auto" scope="col">{{ 'label.bes'|trans }}</th>
          <th class="col-auto" scope="col">{{ 'label.classe'|trans }}</th>
          <th class="col-auto" scope="col">{{ 'label.action'|trans }}</th>
        </tr>
      </thead>
      <tbody>
  {% for u in dati.lista %}
        <tr{% if not u.alunno.abilitato %} class="table-danger"{% endif %}>
          <td>
    {% if u.alunno.abilitato %}
            <span title="{{ 'label.utente_attivo'|trans }}">
              <svg class="icon icon-xs icon-success" aria-hidden="true">
                <use xlink:href="{{ asset('vendor/fontawesome/sprites/solid.svg') }}#check"></use>
              </svg>
            </span>
    {% else %}
            <span title="{{ 'label.utente_disabilitato'|trans }}">
              <svg class="icon icon-sm icon-danger" aria-hidden="true">
                <use xlink:href="{{ asset('vendor/fontawesome/sprites/solid.svg') }}#ban"></use>
              </svg>
            </span>
    {% endif %}
          </td>
          <td><small>{{ u.alunno.cognome }}</small></td>
          <td><small>{{ u.alunno.nome }}</small></td>
          <td><small>{{ u.alunno.dataNascita|date('d/m/Y') }}</small></td>
          <td><small>{{ ('label.bes_'~u.alunno.bes)|trans }}</small></td>
          <td><small>{{ u.alunno.classe ? u.alunno.classe.anno~'Âª '~u.alunno.classe.sezione }}</small></td>
          <td class="pb-0">
            <button type="button" class="btn btn-primary btn-xs mr-1 mb-1" data-toggle="modal" data-target="#gs-info-{{ u.alunno.id }}">{{ 'label.show'|trans }}</button>
            <a class="btn btn-primary btn-xs mr-1 mb-1" href="{{ path('alunni_modifica_edit', {'id': u.alunno.id}) }}" role="button" title="Modifica i dati dell'utente">{{ 'label.edit'|trans }}</a>
            <a class="btn btn-primary btn-xs mr-1 mb-1" href="{{ path('alunni_password', {'username': u.alunno.username, 'tipo': 'E'}) }}" role="button" title="Genera una nuova password per l'alunno e la invia tramite email">{{ 'label.email_password'|trans }}</a>
            <a class="btn btn-primary btn-xs mr-1 mb-1" href="{{ path('alunni_password', {'username': u.alunno.username, 'tipo': 'P'}) }}" role="button" title="Genera una nuova password per l'alunno e la scarica come documento PDF">{{ 'label.pdf_password'|trans }}</a>
    {% if u.alunno.abilitato %}
            <a class="btn btn-danger btn-xs mb-1" href="{{ path('alunni_abilita', {'id': u.alunno.id, 'abilita': 0}) }}" role="button" title="Disabilita l'utente">{{ 'label.disable'|trans }}</a>
    {% else %}
            <a class="btn btn-success btn-xs mb-1" href="{{ path('alunni_abilita', {'id': u.alunno.id, 'abilita': 1}) }}" role="button" title="Abilita l'utente">{{ 'label.enable'|trans }}</a>
    {% endif %}
            <button type="button" class="btn btn-secondary btn-xs mr-1 mb-1" data-toggle="modal" data-target="#gs-scelta-genitore" title="Genera una nuova password per il genitore e la invia tramite email"
              data-title="Scegli il genitore a cui inviare la password"
              data-button1="{{ (u.g1_email and u.g1_email[-6:] != '.local') ? 'Invia' }}"
              data-gen1="{{ u.g1_nome }} {{ u.g1_cognome }} ({{ u.g1_username }})" data-email1=": {{ u.g1_email }}"
              data-href1="{{ path('alunni_password', {'username': u.g1_username, 'tipo': 'E'}) }}"
              data-button2="{{ (u.g2_email and u.g2_email[-6:] != '.local') ? 'Invia' }}"
              data-gen2="{{ u.g2_nome }} {{ u.g2_cognome }} ({{ u.g2_username }})" data-email2=": {{ u.g2_email }}"
              data-href2="{{ path('alunni_password', {'username': u.g2_username, 'tipo': 'E'}) }}">{{ 'label.email_password_genitore'|trans }}</button>
            <button type="button" class="btn btn-secondary btn-xs mr-1 mb-1" data-toggle="modal" data-target="#gs-scelta-genitore" title="Genera una nuova password per il genitore e la scarica come documento PDF"
              data-title="Scegli il genitore di cui scaricare la password"
              data-button1="Scarica"
              data-gen1="{{ u.g1_nome }} {{ u.g1_cognome }} ({{ u.g1_username }})" data-email1=""
              data-href1="{{ path('alunni_password', {'username': u.g1_username, 'tipo': 'P'}) }}"
              data-button2="Scarica"
              data-gen2="{{ u.g2_nome }} {{ u.g2_cognome }} ({{ u.g2_username }})" data-email2=""
              data-href2="{{ path('alunni_password', {'username': u.g2_username, 'tipo': 'P'}) }}">{{ 'label.pdf_password_genitore'|trans }}</button>
