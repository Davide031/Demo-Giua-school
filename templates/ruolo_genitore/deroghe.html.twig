{% extends 'ruolo_genitore/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  <h1 class="text-center gs-h1 gs-mt-2 gs-mb-3">{{ 'title.genitori_deroghe'|trans({'%sex%': (alunno.sesso == 'M' ? 'o' : 'a')}) }} {{ alunno.nome~' '~alunno.cognome }}</h1>
  {% if not classe %}
  <div class="alert alert-warning" role="alert">
    <strong class="gs-big">{{ 'exception.genitori_classe_nulla'|trans({'%sex%': (alunno.sesso == 'M' ? 'o' : 'a')}) }}</strong>
  </div>
  {% else %}
  <div class="alert alert-info gs-mt-5" role="alert">
    <strong class="gs-big">
      Autorizzazione in deroga all'orario di entrata:
    {% if alunno.autorizzaEntrata %}
      <em class="gs-text-normal gs-big">{{ alunno.autorizzaEntrata }}</em>
    {% else %}
      <span class="gs-text-normal gs-big">NESSUNA</span>
    {% endif %}
    </strong>
  </div>
  <div class="alert alert-info gs-mt-5" role="alert">
    <strong class="gs-big">
      Autorizzazione in deroga all'orario di uscita:
    {% if alunno.autorizzaUscita %}
      <em class="gs-text-normal gs-big">{{ alunno.autorizzaUscita }}</em>
    {% else %}
      <span class="gs-text-normal gs-big">NESSUNA</span>
    {% endif %}
    </strong>
  </div>
  {% endif %}
</div>
{% endblock %}
