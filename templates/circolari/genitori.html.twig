{% extends 'ruolo_genitore/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  <h1 class="text-center gs-h2 gs-mt-2">{{ (is_granted('ROLE_GENITORE') ? 'title.circolari_genitori' : 'title.circolari_alunni')|trans }}</h1>
  {% if page == 1 and dati.nuove|length > 0 %}
  <table class="table table-bordered table-hover table-striped gs-mb-0">
    <caption class="text-info text-center gs-big gs-pb-0"><strong>Circolari da leggere</strong></caption>
    <thead class="bg-success">
      <tr>
        <th class="col-sm-2">{{ 'label.data'|trans }}</th>
        <th class="col-sm-2">{{ 'label.numero'|trans }}</th>
        <th class="col-sm-6">{{ 'label.oggetto'|trans }}</th>
        <th class="col-sm-2">{{ 'label.action'|trans }}</th>
      </tr>
    </thead>
    <tbody>
    {% for k,a in dati.nuove %}
      <tr>
        <td>{{ a.data|date('d/m/Y') }}</td>
        <td>{{ a.numero }}</td>
        <td><small>{{ a.oggetto }}</small></td>
        <td>
          <button class="btn btn-xs btn-primary gs-button-remote" type="button" title="Visualizza la circolare indicata" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('circolari_dettagli_destinatari', {'id': a.id}) }}"><span class="glyphicon glyphicon-zoom-in gs-mr-2"></span>Visualizza</button>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
  {% endif %}
  {% if dati.lista|length > 0 %}
  <table class="table table-bordered table-hover table-striped gs-mb-4">
    <caption class="text-info text-center gs-big gs-pb-0 gs-mt-4"><strong>Circolari{{ dati.nuove|length>0 ? ' meno recenti' }}</strong></caption>
    <thead class="bg-success">
      <tr>
        <th class="col-sm-2">{{ 'label.data'|trans }}</th>
        <th class="col-sm-2">{{ 'label.numero'|trans }}</th>
        <th class="col-sm-6">{{ 'label.oggetto'|trans }}</th>
        <th class="col-sm-2">{{ 'label.action'|trans }}</th>
      </tr>
    </thead>
    <tbody>
    {% for k,a in dati.lista %}
      <tr>
        <td>{{ a.data|date('d/m/Y') }}</td>
        <td>{{ a.numero }}</td>
        <td><small>{{ a.oggetto }}</small></td>
        <td>
          <button class="btn btn-xs btn-primary gs-button-remote" type="button" title="Visualizza la circolare indicata" data-toggle="modal" data-target="#gs-modal-remote" data-href="{{ path('circolari_dettagli_destinatari', {'id': a.id}) }}"><span class="glyphicon glyphicon-zoom-in gs-mr-2"></span>Visualizza</button>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
  {% elseif dati.nuove|length == 0 %}
  <div class="alert alert-info" role="alert">
    <strong class="gs-big">Nessuna circolare presente</strong>
  </div>
  {% endif %}
  {% include 'include/paginate.html.twig' with {'maxPagine': maxPages, 'pagina': page, 'url': 'circolari_genitori'} %}
  {% include 'include/modal-remote.html.twig' %}
</div>
{% endblock %}

{% block pagina_js_fine %}
{{ parent() }}
<script>
$(document).ready(function() {
  $('#gs-modal-remote').on('show.bs.modal', function (event) {
    var url = $(event.relatedTarget).data('href');
    $(this).find('#gs-modal-remote-content').load(url);
  });
  $(".gs-button-remote").click(function(e) {
    e.preventDefault();
    var url = $(e.currentTarget).data('href');
    $('#gs-modal-remote-content').html('<div class="modal-content"><div class="modal-header"><h3 class="modal-title">Attendere prego...</h3></div><div class="modal-body"><div class="progress"><div class="progress-bar progress-bar-info progress-bar-striped active" style="width: 100%"></div></div></div></div>');
  });
});
</script>
{% endblock %}
