{{ form_start(form) }}
  <div class="modal-header">
    <h3 class="modal-title gs-h3">Piano di Apprendimento Individualizzato</h3>
    <h4 class="modal-title gs-h4">Alunn{{ alunno.sesso == 'M' ? 'o' : 'a' }}: {{ alunno.cognome~' '~alunno.nome }}</h4>
  </div>
  <div class="modal-body">
    <ul id="gs-form-collection" class="list-group">
  {% for piano in form.lista %}
      <li class="list-group-item">
        <div class="text-center text-primary"><strong class="gs-big">{{ piano.vars.value.materia.nomeBreve }}</strong></div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="{{ piano.debito.vars.id }}">Obiettivi di apprendimento</label>
          <div class="col-sm-10">
            {{ form_widget(piano.debito) }}
          </div>
        </div>
        <div class="form-group">
          <label class="control-label col-sm-2" for="{{ piano.strategie.vars.id }}">Strategie per il recupero</label>
          <div class="col-sm-10">
            {{ form_widget(piano.strategie) }}
          </div>
        </div>
      </li>
  {% endfor %}
    </ul>
  </div>
  <div class="modal-footer">
    {{ form_widget(form.submit, {attr: {class: 'btn-primary'}}) }}
    <button type="button" class="btn-default btn" data-dismiss="modal">{{ 'label.cancel'|trans }}</button>
  </div>
  {{ form_widget(form._token) }}
{{ form_end(form, {'render_rest': false}) }}
