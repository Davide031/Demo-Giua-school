{% extends 'utenti/index.html.twig' %}

{% block pagina_contenuto %}
<div class="container-fluid">
  {% include('include/form.html.twig') %}
</div>
{% endblock %}

{% block pagina_js_fine %}
{{ parent() }}
<script>
$(document).ready(function() {
  $('label.radio-inline input').change(function() {
    $('label.radio-inline input').parent().removeClass('active text-success text-danger');
    if ($('label.radio-inline input[value="1"]').is(":checked")) {
      $('label.radio-inline input[value="1"]').parent().addClass('active text-success');
    }
    if ($('label.radio-inline input[value="0"]').is(":checked")) {
      $('label.radio-inline input[value="0"]').parent().addClass('active text-danger');
    }
  }).change();
});
</script>
{% endblock %}
